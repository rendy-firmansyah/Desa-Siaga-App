generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int  @id @default(autoincrement())
  email     String @unique
  password  String
  username  String
  role      String?
}
model kecamatan{
  id        Int  @id @default(autoincrement())
  nama      String
  alamat    String
  desa      desa[]
}
model desa {
  id                  Int  @id @default(autoincrement())
  nama                String
  alamat              String
  telepon             String
  website             String
  email               String
  luas                Float
  letak_dan_batas     String
  banyak_dusun        Int
  jumlah_penduduk     Int
  akses_komunikasi    String
  akses_transportasi  String
  nama_responden      String
  nip_responden       String
  jabatan_responden   String
  nomor_hp_responden  String
  kecamatan_id        Int
  kecamatan           kecamatan @relation(fields: [kecamatan_id], references: [id])
  berita              berita[]
  pelaporanAwal       pelaporanAwal[]
}
model berita{
  id                  Int @id@default(autoincrement())
  judul               String
  deskripsi           String
  gambar              String
  desa_id             Int
  created_at          DateTime @default(now())
  desa                desa @relation(fields: [desa_id], references: [id])
}
model pelaporanAwal {
  id                      Int @id @default(autoincrement())
  jenisBencana            String
  waktuKejadian           DateTime
  deskripsi               String
  lokasi                  String
  desa_id                 Int
  desa                    desa @relation(fields: [desa_id], references: [id])
  jumlahPendudukTerancam  Int
  created_at              DateTime @default(now())
  korbanMeninggal         korbanMeninggal[]
  korbanHilang            korbanHilang[]
  korbanLuka              korbanLuka[]
  korbanPengungsi         korbanPengungsi[]
}
model korbanMeninggal {
  id                      Int @id @default(autoincrement())
  nama                    String 
  alamat                  String
  jenisKelamin            String
  usia                    Int
  tempatMeninggal         String
  penyebab                String
  pelaporan_id            Int
  pelaporan               pelaporanAwal @relation(fields: [pelaporan_id], references: [id])
}
model korbanHilang {
  id                    Int @id @default(autoincrement())
  nama                  String
  alamat                String
  jenisKelamin          String
  usia                  Int
  lokasiHilang          String
  pelaporan_id          Int
  pelaporan             pelaporanAwal @relation(fields: [pelaporan_id], references: [id])
}
model korbanLuka {
  id                    Int @id @default(autoincrement())
  namaFaskes            String
  jenisRawat            String
  lakiLaki              Int
  wanita                Int
  jumlah                Int
  pelaporan_id          Int
  pelaporan             pelaporanAwal @relation(fields: [pelaporan_id], references: [id])
}
model korbanPengungsi {
  id                    Int @id @default(autoincrement())
  Kabupaten             String
  Desa                  String
  lokasi                String
  gangguanAnak          String
  gangguanDewasa        String
  lakiLaki              Int
  perempuan             Int
  jumlah                Int
  kk                    Int
  pelaporan_id          Int
  pelaporan             pelaporanAwal @relation(fields: [pelaporan_id], references: [id])
}